{
  "compilerOptions": {
    "outDir": "./dist/",
    // запрещает неявное any
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    // для обработки js
    "allowJs": true,
    "moduleResolution": "node",
    // для замены require на import
    "esModuleInterop": true,
    // для обычных импортов без 'as *'
    "allowSyntheticDefaultImports": true
  }
}