{
  "compilerOptions": {
    "outDir": "./dist/",
    // запрещает неявное any
    "noImplicitAny": true,
    "module": "ES6",
    "target": "ES5",
    "jsx": "react",
    // для обработки js
    "allowJs": true,
    "moduleResolution": "node",
    // для замены require на import
    "esModuleInterop": true,
    // для обычных импортов без 'as *'
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}